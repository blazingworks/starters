{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./**/*.ts", "!./node_modules/**/*.ts", "!./dist/**/*.ts"]
}
